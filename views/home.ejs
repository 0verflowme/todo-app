<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <title>
        <%= title %>
    </title>
</head>

<body class="bg-teal-100">
    <div class="h-full w-full flex items-center justify-center bg-teal-100 font-sans">
        <div class="bg-white rounded shadow p-6 m-4 w-full lg:w-3/4 lg:max-w-6xl">
            <h1 class="text-gray-darkest text-5xl text-center mb-2">TodoList</h1>
            <div class="flex mt-4">
                <form class="flex w-full" action="/add" method="post">
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 mr-4 text-gray-darker"
                        type="text" name="desc" placeholder="Add Todo">

                    <button
                        class="flex-no-shrink p-2 border-2 rounded-lg text-gray-500 border-green-400 hover:text-gray-400 hover:bg-teal-50"
                        type="submit">Add</button>
                </form>
            </div>
            <div class="mt-3">
                <% todoList.forEach(element=> { %>
                    <% if(element.done !=true){ %>
                        <div class="flex mb-4 items-center">
                            <p class="w-full text-gray-900">
                                <%= element.desc %>
                            </p>
                            <form action="/done" method="post">
                                <button
                                    class="flex-no-shrink p-2 ml-4 mr-2 border-2 rounded-lg hover:text-white text-green-400 border-green-300 hover:bg-green-400"
                                    name="id" value="<%= element._id %> ">Done</button>
                            </form>
                            <form action="/remove" method="post">
                                <button
                                    class="flex-no-shrink p-2 ml-2 border-2 rounded-lg text-red-400 border-red-500 hover:text-white hover:bg-red-500"
                                    name="id" value="<%= element._id %> ">Remove</button>
                            </form>
                        </div>
                        <% }else{ %>
                            <div class="flex mb-4 items-center">
                                <p class="w-full text-green-600 line-through">
                                    <%= element.desc %>
                                </p>
                                <form action="/notdone" method="post">
                                    <button
                                        class="flex-no-shrink w-fit p-2 ml-4 mr-2 border-2 rounded-lg hover:text-white text-gray-500 border-gray-500 hover:bg-gray-400"
                                        name="id" value="<%= element._id %> ">Not Done</button>
                                </form>
                                <form action="/remove" method="post">
                                    <button
                                        class="flex-no-shrink p-2 ml-2 border-2 rounded-lg text-red-400 border-red-500 hover:text-white hover:bg-red-500"
                                        name="id" value="<%= element._id %> ">Remove</button>
                                </form>
                            </div>
                            <% } %>
                                <% }) %>
            </div>
        </div>
    </div>
</body>

</html>